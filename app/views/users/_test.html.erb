<% if likes.any? %>
  <ul class="list-unstyled">
      <% likes.each do |like| %>
        <li class="media">
          <div class="media-body">
              <div>
                  <%= like.content %>
              </div>
              <div>
                  <p><%= link_to 'View profile', user_path(like) %></p>
              </div>
          </div>
        </li>
      <% end %>
  </ul>
  <%= paginate likes %>
<% end %>





<% if false %>
    <% likes.each do |like| %>
    <%= like.likes  %>

    <% if false %>    
    <%= current_user.favorites.find_by(micropost_id: user.id) %>
    <% end %>
    
    <p><%= link_to 'View profile', likes_user_path(@user) %></p>
    <% end %>
<% end %>